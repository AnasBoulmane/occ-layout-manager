{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@api": [ "src/api/" ],
      "@api/*": [ "src/api/*" ],
      "@helpers/*": [ "src/helpers/*" ],
      "@inquirer": [ "src/inquirer" ],
      "@inquirer/*": [ "src/inquirer/*" ],
      "@listr": [ "src/listr" ],
      "@listr/*": [ "src/listr/*" ],
      "@locales/*": [ "src/locales/*" ],
      "@Types/*": [ "src/types/*" ]
    }
  }
}
